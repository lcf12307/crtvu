<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crtvu.dao.courseDAO">
    <!-- 添加样品 -->

    <insert id = "insertCourse" >
        INSERT INTO tb_course
        VALUES ( #{id},#{name},#{credit},#{nature},#{department} )
    </insert>

    <insert id = "insertCourseNoCre" >
       INSERT INTO tb_course(id,name,nature,department)
        VALUES ( #{id},#{name},#{nature},#{department} )

    </insert>

    <delete id = "deleteCourse"  parameterType = "String">

      DELETE FROM tb_course
      WHERE id = #{id}

    </delete>

    <update id = "updateCourse" >
      UPDATE tb_course
      set name = #{name},credit = #{credit},nature = #{nature},department = #{department}
      WHERE id = #{id}

    </update>

    <update id = "updateCourseNoCre" >
        UPDATE tb_course
        set name = #{name},nature = #{nature},credit = NULL ,department = #{department}
        WHERE id = #{id}
    </update>

    <select id = "selectCourse"  resultType = "courseEntity">
      SELECT *
      FROM tb_course
      where id = #{id}
    </select>

    <select id = "selectAllCourse"  resultType="courseEntity">
     SELECT  id,name,credit,nature,department
     FROM tb_course
    </select>



</mapper>